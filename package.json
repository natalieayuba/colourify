{
  "name": "colourify",
  "version": "0.1.0",
  "description": "Script to run both server and client concurrently",
  "repository": {
    "type": "git",
    "url": "https://github.com/nayuba/colourify.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "npm run dev --prefix server",
    "client": "npm start --prefix client",
    "start": "npm run dev --prefix server",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client/ && npm install --production && npm run build"
  },
  "keywords": [],
  "author": "Natalie Ayuba",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
